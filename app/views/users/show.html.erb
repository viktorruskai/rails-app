<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.admin? %>
      <% if @user.videos.any? %>
        <h3><%= pluralize(@user.videos.count, "Video") %></h3>
        <ol class="videos">
          <%= render @videos %>
        </ol>
        <%= will_paginate @videos %>
      <% else %>
        <h3>No videos yet</h3>
      <% end %>
    <% else %>
      <h3>Student user</h3>
    <% end %>
  </div>
</div>