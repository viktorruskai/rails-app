<% provide(:title, 'Add a new video') %>
<h1>New video</h1>

<%= form_with(model: @video, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
      <%= f.text_field :title, placeholder: "Title" %>
    </div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Description" %>
  </div>
  <span class="video">
      <%= f.file_field :video, required: true, accept: "video/mp4,video/quicktime" %>
    </span>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $("#video_video").bind("change", function() {
    const size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 500) {
      alert("Maximum file size is 500MB. Please choose a smaller file.");
      $("#video_image").val("");
    }
  });
</script>

