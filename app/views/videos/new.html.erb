<% provide(:title, 'Add a new video') %>

<div class="row mt-2">
  <h1>New video</h1>

  <%= form_for @video do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group mb-2">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>
    <div class="form-group mb-2">
      <%= f.text_area :content, placeholder: "Description", class: "form-control" %>
    </div>

    <div class="form-group mb-2">
      <span class="video">
        <%= f.file_field :video,  accept: "video/mp4,video/quicktime", class: "form-control" %>
      </span>
    </div>
    
    <%= f.submit "Add", class: "btn btn-primary" %>
  <% end %>
</div>

<script type="text/javascript">
  $("#video_video").bind("change", function() {
    const size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 500) {
      alert("Maximum file size is 500MB. Please choose a smaller file.");
      $("#video_image").val("");
    }
  });
</script>

