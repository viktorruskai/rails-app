<% if logged_in? %>
  <div class="row">
    <div class="col-md-8">
      <h3>Hi <%= current_user.name %>, </h3>
      <p>
        go to the <%= link_to "videos", videos_path %> page to view all videos.
      </p>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the e-learning platform.</h1>

    <h2>
      This is the home page for the sample application.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"),
                        "https://rubyonrails.org/" %>
<% end %>
